<i18n:domain i18n:domain="plone.formwidget.contenttree">
  <div>
    <div tal:attributes="id string:${view/id}-input-fields"
         tal:content="structure view/renderQueryWidget" />
    <tal:block replace="structure view/subform/render" />
  </div>

  <div class="plone-app-contenttree"
       tal:define="ajaxurl view/getAjaxUrl"
       tal:attributes="inputid view/id;
		       inputname view/name;
		       basepath view/portal_path;
		       multiselect view/multi_select;
       		       loadurl string:$ajaxurl-fetch;
		       searchurl string:$ajaxurl-search;">
    <div>
      <input type="text" tal:attributes="id string:${view/id}-search" />
      <input type="button" 
	     tal:attributes="id string:${view/id}-searchbtn" value="Search" />
      <input type="button" 
	     tal:attributes="id string:${view/id}-reloadbtn" value="Reload" />
      <div class="plone-app-contenttree-tree">
      </div>
    </div>
  </div>
</i18n:domain>
